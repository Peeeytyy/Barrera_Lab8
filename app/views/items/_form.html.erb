<%= form_with(model: @item, local: true) do |form| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :quantity %>
    <%= form.number_field :quantity %>
  </div>

  <div class="field">
    <%= form.label :total %>
    <%= form.number_field :total %>
  </div>

  <div class="field">
    <%= form.label :product_id %>
    <%= form.select :product_id, Product.all.map { |p| [p.name, p.id] } %>
  </div>

  <div class="field">
    <%= form.label :transaction_order_id %>
    <%= form.select :transaction_order_id, TransactionOrder.all.map { |t| [t.id, t.id] } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
